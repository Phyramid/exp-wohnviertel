@import 'responsive'

*
  box-sizing border-box

.clearfix:after
  content " "
  display block
  clear both

html, body
  margin 0
  padding 0
  font-family 'Questa', 'Georgia', serif
  font-size 16px
  line-height 1.5
  color #222

h1, h2, h3, h4, h5, h6
  margin-top 0

h1
  font-size 3rem
h2
  font-size 2.5rem
h3
  font-size 2rem
h4
  font-size 1.5rem
h5
  font-size 1.2rem
h6
  font-size 1rem

p
  margin-top 0
  margin-bottom 1rem
  &:last-child
    margin-bottom 0
