.hero-container
  position relative
  .hero
    width 100%
    height 100vh
  .hero-text
    position absolute
    top 0
    left 0
    right 0
    bottom 0
    padding 8rem 0
    background rgba(255,255,255,0.4)
    text-align center
    h1
      margin 0
      margin-bottom 1rem
      font-size 5rem
      font-weight 200
      div
        display inline-block
        padding 1rem 2rem
        margin-bottom 1rem
        background #2d0f41
        color white
