.profile
  margin-bottom 8rem

  .profile-header
    display flex
    align-items center
    justify-content center
    flex-direction column
    padding 6rem 0
    h2
      padding 0
      margin-bottom 1rem
    p
      font-size 1.2rem
      text-align center
      &:last-of-type
        margin-bottom 0
    .profile-dropdown
      margin-top 3rem
      min-width 25rem
      &, input
        font-size 1.5rem

  .profile-map
    display flex
    align-items center
    .chart
      flex 1

  .profile-metrics
    .metric
      margin-bottom 1rem
      padding 0 1rem
      border-left 5px solid color-dark-purple
      .metric__name
        h4
          margin-bottom 0.2rem
          font-size 1.3rem
      .metric__info
        p
          margin-bottom 0
        .value
          font-size 1.6rem
          margin-bottom 0.5rem
        .rankinfo
          color #333
