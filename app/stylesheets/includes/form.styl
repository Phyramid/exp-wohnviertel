@import 'colors'

input, textarea, select, button
  font-size 1rem

button.button, a.button
  display block
  border 0
  width 100%
  padding 0.5rem 0.7rem
  background color-control-background
  border 1px solid darken(color-control-background, 5%)
  text-align center
  text-decoration none
  color #333
  white-space nowrap
  cursor pointer
  font-family inherit
  &.button--primary
    background color-accent
    border 1px solid darken(color-accent, 5%)
    color white
    &:hover
      background darken(color-accent, 5%)
  &.button--danger
    background color-error-red
    border 1px solid darken(color-error-red, 5%)
    color white
    &:hover
      background darken(color-error-red, 5%)
  &.button--disabled, &[disabled]
    background #ccc
    border 1px solid darken(#ccc, 5%)
    cursor default
    pointer-events none
    outline none
  &.button--shrink
    display inline-block
    width auto
  &.button--prev, &.button--next
    position relative
  &.button--prev:before, &.button--next:after
    content ''
    display inline-block
    height 0.7rem
    width 0.7rem
    margin-left 0.5rem
    margin-right 0.5rem
    border-style solid
    border-width 0.1rem 0.1rem 0 0
    vertical-align -1px
  &.button--prev:before
    transform rotate(-135deg)
  &.button--next:after
    transform rotate(45deg)
  &.button--right
    float right
  &.button--lg
    font-size 1.1rem
    padding 0.7rem 0.9rem
  &.button--sm
    font-size 0.8rem
    padding 0.3rem 0.5rem
  &.button--xs
    font-size 0.7rem
    padding 0.2rem 0.4rem
  &.button--tiny
    font-size 0.6rem
    padding 0.1rem 0.3rem
  &.button--text
    padding 0
    padding-bottom 0.2rem
    border-top 0
    border-left 0
    border-right 0
    background none
    color white

select.control,
input.control[type='text'],
input.control[type='tel'],
input.control[type='email'],
input.control[type='search'],
input.control[type='url'],
input.control[type='number'],
input.control[type='password']
textarea.control
  background none // reset
  box-shadow none // reset
  border 0 // reset
  border-radius 0 // reset
  display block
  width 100%
  margin-bottom 1.3rem
  padding 0.5rem
  // box-shadow inset 0 1px 0px rgba(0,0,0,0.07)
  border 1px solid color-control-border
  background-color color-control-background
  font-family inherit
  &.control--inline
    display inline-block
    width auto

select.control
  -webkit-appearance none
  -moz-appearance none
  appearance none
  position relative
  padding-right 2rem
  background url('/static/images/icons/glyphicons-602-chevron-down@0.7x.png') no-repeat 97% 50% color-control-background

.control-container
  margin-bottom 1.3rem
  .control
    margin-bottom 0

label
  display block
  margin-bottom 0.4rem
  font-weight 500

label.aj-radio
  display block
  width 100%
  .feature-illustration
    float right
    @media (max-width: 767px)
      display block
      float none
      margin-top 0.5rem
    img
      height 1.5rem

label .control + span
  margin-left 1rem
  font-size 1rem
  font-weight normal

.control-group
  display flex
  border 1px solid color-control-border
  .control
    border 0
  .button
    flex 1
    border 0
